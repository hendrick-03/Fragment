<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new3"
    tools:context=".New3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:text="Welcome" />



        <RadioGroup
            android:id="@+id/radioGroupListStudents"
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:layout_height="wrap_content">



            <RadioButton
                android:id="@+id/listarLeitbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listar apenas estudantes maiores de 25" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/s"
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/Listartodos_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listar todos os estudantes"
                />

            <RadioButton
                android:id="@+id/listarpaenas_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listar estudantes da LEIT" />

        </RadioGroup>

        <Button
            android:id="@+id/listarbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Listar" />


    </LinearLayout>
</FrameLayout>